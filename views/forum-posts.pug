extends layout

block content

  each post in posts
    a.link-post(href=`/posts/${post.id}?page=1`)
      .post-container
        .post-content
          .post-info
            p Date: #{post.formatted_date} at #{post.time}
          .post-title
            h2= post.title
          .post-info
            p= post.username
            p Number of Comments: #{post.numberOfComments}
    
  if pageNumber > 1
    a.pagination-button(href=`/forum?page=${pageNumber - 1}`) Previous
  if pageNumber < maxPageNumber
    a.pagination-button(href=`/forum?page=${pageNumber + 1}`) Next

